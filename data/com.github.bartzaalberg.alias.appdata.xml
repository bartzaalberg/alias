<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
  <id>com.github.bartzaalberg.alias</id>
  <metadata_license>CC0</metadata_license>
  <project_license>GPL-3.0+</project_license>
  <name>Alias</name>
  <summary>Simplify your commands</summary>
  <description>
    <p>A tool to manage your bash aliases</p>
    <p>Features:</p>
     <ul>
       <li>Manage your aliases</li>
       <li>Use handy shortcuts to navigate the app</li>
    </ul>
  </description>
 <releases>
   <release version="0.1.1" date="2018-05-27">
      <description>
        <p>Russian translation and bug fix</p>
        <ul>
          <li>Added Russian translation</li>
          <li>Fixed a bug where app would crash on comments in file</li>
        </ul>
      </description>
    </release>
    <release version="0.1.0" date="2018-02-27">
      <description>
        <p>Relogging is not required anymore</p>
        <ul>
          <li>Added brand color for headerbar</li>
          <li>~/.bashrc is reloaded after new, edit, and delete</li>
          <li>Quotes are now automatically added to field</li>
        </ul>
      </description>
    </release>
    <release version="0.0.4" date="2018-02-26">
      <description>
        <p>0.0.4</p>
        <ul>
          <li>Updated color for appcenter</li>
        </ul>
      </description>
    </release>
    <release version="0.0.3" date="2018-02-22">
      <description>
        <p>0.0.3</p>
        <ul>
          <li>Fixed appdata xml</li>
          <li>Refactored responsetranslator and fileManager code</li>
        </ul>
      </description>
    </release>
    <release version="0.0.2" date="2018-02-22">
      <description>
        <p>0.0.2</p>
        <ul>
          <li>Fixed deployment</li>
          <li>Removed buttons from welcome view</li>
        </ul>
      </description>
    </release>
    <release version="0.0.1" date="2018-02-21">
      <description>
        <p>0.0.1</p>
        <ul>
          <li>First release</li>
        </ul>
      </description>
    </release>
  </releases>
